<html>
  <head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Merriweather">
    <style>
    body {
        width: 2000;
        height: 2000;
        font-size: 60pt;
        font-family: Merriweather;
        background-color: #f3eae5;
    }
    .poem-title {
        text-decoration: underline;
    }
    .poem-info {
        font-size: 30pt;
    }
    .main-content {
        display: flex;
        align-items: center;
        align-content: center;
        height: 100%;
    }
    .poem-stanza {

    }
    .main-text {
        margin: 200px;
    }
    </style>
  </head>
  <body>
    <div class="main-content">
      <div class="main-text">
        <p class="poem-title">{{dayName}}</p>
        {{#each stanzas}}
          <p class="poem-stanza">{{{this}}}</p>
        {{/each}}
        <p>-Newshub</p>
        <p class="poem-info">Generated by using the pull quotes from Newshub headlines on {{fullDate}}</p>
      </div>
    </div>
  </body>
</html>
